<Window x:Class="RESTClientService.EnterUserID"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RESTClientService"
        mc:Ignorable="d"
        Title="EnterUserID" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Enter User ID:" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBox x:Name="UserIDText" Width="250" Margin="0,0,0,10" />
        <Button Content="OK" Width="80" HorizontalAlignment="Center" Click="OkButton_Click" />
    </StackPanel>
</Window>
